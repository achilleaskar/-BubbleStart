<UserControl x:Class="BubbleStart.Views.Apointments_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:BubbleStart.ViewModels"
             xmlns:models="clr-namespace:BubbleStart.Model"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:views="clr-namespace:BubbleStart.Views"
             xmlns:Converters="clr-namespace:BubbleStart.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             d:DataContext="{d:DesignInstance {x:Type viewmodels:Apointments_ViewModel}}"
             mc:Ignorable="d"
             Background="White"
             FontSize="11"
             x:Name="window"
             d:DesignHeight="650"
             d:DesignWidth="1200">
    <UserControl.Resources>
        <Converters:DateTimeToString x:Key="DateTimeToString" />
        <Converters:AppointmentShowedUptoColorConverter x:Key="appointmentShowedUptoColorConverter" />
       
    </UserControl.Resources>
    <GroupBox Header="Πρόγραμμα Εβδομάδας"
              HorizontalAlignment="Center">
        <Grid Margin=" 0 -4 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Margin="0 0 0 2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <ComboBox Width="70"
                              SelectedIndex="{Binding RoomIndex}"
                              Margin=" 5 0 0 0">
                        <ComboBoxItem Content="Όλες" />
                        <ComboBoxItem Content="Functional" />
                        <ComboBoxItem Content="Reformer" />
                    </ComboBox>
                    <ComboBox Width="70"
                              SelectedIndex="{Binding GymIndex}"
                              Margin="5 0">
                        <ComboBoxItem Content="Όλοι" />
                        <ComboBoxItem Content="Γωγώ" />
                        <ComboBoxItem Content="Γυμναστής" />
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button  Margin="25 0"
                             Command="{Binding PreviousWeekCommand}">
                        <iconPacks:PackIconFontAwesome Kind="ArrowCircleLeftSolid" />
                    </Button>
                    <Button Margin="25 0"
                            Command="{Binding NextWeekCommand}">
                        <iconPacks:PackIconFontAwesome Kind="ArrowCircleRightSolid" />
                    </Button>
                </StackPanel>
            </Grid>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Grid.Row="1">
                <Grid>
                    <Grid.Resources>
                        <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">12</sys:Double>
                        <sys:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">12</sys:Double>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ItemsControl ItemsSource="{Binding Days[0].Hours}"
                                  VerticalAlignment="Top"
                                  Margin="38 0 0 0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Height="Auto"
                                        BorderThickness="1 1 0 0"
                                        BorderBrush="Gray"
                                        Width="91">
                                    <Label   VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             Content="{Binding Time,ConverterParameter='HH:mm', Converter={StaticResource DateTimeToString}}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Border BorderBrush="Gray"
                            Grid.Row="1"
                            BorderThickness="0 0 1 1"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <ItemsControl ItemsSource="{Binding Days }"
                                              HorizontalAlignment="Left">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="1 1 0 0"
                                                    BorderBrush="Gray"
                                                    Width="38">
                                                <Grid HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Stretch">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Label Content="{Binding Date,ConverterParameter='ddd dd/MM', Converter={StaticResource DateTimeToString}}"
                                                           HorizontalAlignment="Center"
                                                           Width="70"
                                                           Grid.RowSpan="2"
                                                           HorizontalContentAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Padding="0">
                                                        <Label.LayoutTransform>
                                                            <RotateTransform Angle="-90" />
                                                        </Label.LayoutTransform>
                                                    </Label>
                                                    <Border BorderBrush="Gray"
                                                            Grid.Row="0"
                                                            Visibility="{Binding DataContext.FunctionalVisible, Converter={StaticResource booleanToVisibilityConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}},UpdateSourceTrigger=PropertyChanged}"
                                                            Grid.Column="1"
                                                            Height="100"
                                                            Background="LightYellow"
                                                            BorderThickness="1 0 0 0">
                                                        <TextBlock Text="Functional"
                                                                   VerticalAlignment="Center">
                                                            <TextBlock.LayoutTransform>
                                                                <RotateTransform Angle="-90" />
                                                            </TextBlock.LayoutTransform></TextBlock>
                                                    </Border>
                                                    <Border BorderBrush="Gray"
                                                            Grid.Row="1"
                                                            Height="100"
                                                            Visibility="{Binding DataContext.ReformerVisible, Converter={StaticResource booleanToVisibilityConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}},UpdateSourceTrigger=PropertyChanged}"
                                                            Grid.Column="1"
                                                            Background="BlanchedAlmond"
                                                            BorderThickness="1 0 0 0">
                                                        <TextBlock Text="Reformer"
                                                                   VerticalAlignment="Center">
                                                            <TextBlock.LayoutTransform>
                                                                <RotateTransform Angle="-90" />
                                                            </TextBlock.LayoutTransform></TextBlock>
                                                    </Border>
                                                    <!--<Label Content="{Binding Date,ConverterParameter='dd/MM', Converter={StaticResource DateTimeToString}}"
                                                           HorizontalAlignment="Center" />-->
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <!-- to pragmatiko itemscontrol-->
                                <ItemsControl ItemsSource="{Binding Days}"
                                              VerticalAlignment="Top">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <ItemsControl ItemsSource="{Binding Hours}"
                                                              Visibility="{Binding DataContext.FunctionalVisible, Converter={StaticResource booleanToVisibilityConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}},UpdateSourceTrigger=PropertyChanged}"
                                                              HorizontalAlignment="Left">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="Gray"
                                                                    Width="91"
                                                                    Height="100"
                                                                    BorderThickness="1 1 0 0">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*" />
                                                                        <RowDefinition Height="Auto" />
                                                                    </Grid.RowDefinitions>
                                                                    <ListBox BorderThickness="0"
                                                                             Background="LightYellow"
                                                                             SelectedItem="{Binding SelectedApointmentFunctional}"
                                                                             ItemsSource="{Binding AppointmentsFunctional}">
                                                                        <ListBox.Resources></ListBox.Resources>
                                                                        <ListBox.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock Text="{Binding Customer}"
                                                                                               Padding="1"
                                                                                               Background="{Binding  Converter={StaticResource appointmentShowedUptoColorConverter}}">
                                                                                        <TextBlock.ToolTip>
                                                                                            <TextBlock Text="{Binding PersonName}" />
                                                                                        </TextBlock.ToolTip>
                                                                                    </TextBlock>
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </ListBox.ItemTemplate>
                                                                    </ListBox>
                                                                    <Border Grid.Row="1"
                                                                            BorderBrush="Black"
                                                                            Background="LightYellow"
                                                                            BorderThickness="0 1 0 0">
                                                                        <Grid>
                                                                            <Button Content="+"
                                                                                    Width="14"
                                                                                    Command="{Binding AddApointmentCommand}"
                                                                                    CommandParameter="0"
                                                                                    Margin="5 0"
                                                                                    HorizontalAlignment="Left" />
                                                                            <Button Content="-"
                                                                                    Width="14"
                                                                                    Command="{Binding DeleteFunctionalApointmentCommand}"
                                                                                    Margin="5 0"
                                                                                    HorizontalAlignment="Right" />
                                                                        </Grid>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <ItemsControl ItemsSource="{Binding Hours}"
                                                              Visibility="{Binding DataContext.ReformerVisible, Converter={StaticResource booleanToVisibilityConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}},UpdateSourceTrigger=PropertyChanged}"
                                                              HorizontalAlignment="Left">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="Gray"
                                                                    Width="91"
                                                                    Height="100"
                                                                    BorderThickness="1 1 0 0">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*" />
                                                                        <RowDefinition Height="Auto" />
                                                                    </Grid.RowDefinitions>
                                                                    <ListBox BorderThickness="0"
                                                                             Background="BlanchedAlmond"
                                                                             SelectedItem="{Binding SelectedApointmentReformer}"
                                                                             ItemsSource="{Binding AppointmentsReformer}">
                                                                        <ListBox.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock Text="{Binding Customer}" Padding="1"
                                                                                               Background="{Binding  Converter={StaticResource appointmentShowedUptoColorConverter}}" />
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </ListBox.ItemTemplate>
                                                                    </ListBox>
                                                                    <Border Grid.Row="1"
                                                                            Background="BlanchedAlmond"
                                                                            BorderBrush="Black"
                                                                            BorderThickness="0 1 0 0">
                                                                        <Grid>
                                                                            <Button Content="+"
                                                                                    Width="14"
                                                                                    Command="{Binding AddApointmentCommand}"
                                                                                    CommandParameter="1"
                                                                                    Margin="5 0"
                                                                                    HorizontalAlignment="Left" />
                                                                            <Button Content="-"
                                                                                    Width="14"
                                                                                    Command="{Binding DeleteReformerApointmentCommand }"
                                                                                    Margin="5 0"
                                                                                    HorizontalAlignment="Right" />
                                                                        </Grid>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </GroupBox>
</UserControl>
