<Window x:Class="BubbleStart.Views.CustomerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Converters="clr-namespace:BubbleStart.Converters"
        xmlns:models="clr-namespace:BubbleStart.Model"
        d:DataContext="{d:DesignInstance models:Customer}"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Background="White"
        d:DesignHeight="950"
        d:DesignWidth="800">
    <Window.Resources>
        <Converters:ProgramTypeToStringConverter x:Key="ProgramTypeToStringConverter" />
        <Converters:MeetingsToColorConverter x:Key="MeetingsToColorConverter" />
    </Window.Resources>
    <GroupBox>
        <StackPanel>
            <Grid Width="330">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="Ονοματεπώνυμο:"
                       Grid.Row="0"
                       Grid.Column="0" />
                <TextBlock Text="{Binding FullName}"
                           Grid.Row="0"
                           Grid.Column="1"
                           Margin="0,5,0,4" />
                <Label Content="Ηλικία"
                       Grid.Row="1"
                       Grid.Column="0"
                       Grid.ColumnSpan="2" />
                <TextBlock Text="{Binding Age}"
                           Grid.Row="1"
                           Grid.Column="2"
                           Margin="0,1" />
                <Label Content="Τηλέφωνο:"
                       Grid.Row="3"
                       Grid.Column="0" />
                <TextBlock Text="{Binding Tel}"
                           Grid.Row="3"
                           Grid.Column="1"
                           Margin="0,4" />
                <Separator Grid.Row="4"
                           Grid.ColumnSpan="2" />
                <Label Content="Ενεργή συνδρομή:"
                       Grid.Row="5"
                       Grid.Column="0" />
                <TextBlock Text="{Binding Active}"
                           Grid.Row="5"
                           Grid.Column="1"
                           Margin="0,4" />
                <Label Content="Απομένουν(φορές):"
                       Grid.Row="6"
                       Grid.Column="0" />
                <TextBlock Text="{Binding RemainingDays}"
                           Grid.Row="6"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           Padding="5 0"
                           Background="{Binding RemainingDays, Converter={StaticResource MeetingsToColorConverter}}"
                           Margin="0,4" />
                <Label Content="Τύπος Ενεργού Πακέτου:"
                       Grid.Row="7"
                       Grid.Column="0" />
                <TextBlock Text="{Binding TypeOfProgram, Converter={StaticResource ProgramTypeToStringConverter}, Mode=OneWay}"
                           Grid.Row="7"
                           Grid.Column="1"
                           Margin="0,4" />
                <Label Content="Υπόλοιπο:"
                       Grid.Row="8"
                       Grid.Column="0" />
                <TextBlock Text="{Binding RemainingAmount, StringFormat=c0}"
                           Grid.Row="8"
                           Grid.Column="1"
                           Margin="0,4" />
                <GroupBox Grid.Row="9"
                          Grid.ColumnSpan="2"
                          Header="Αγορά πακέτου">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Row="0"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Grid.Column="0">
                            <StackPanel>
                                <TextBlock Text="Τύπος:"
                                           HorizontalAlignment="Left" />
                                <ComboBox VerticalAlignment="Top"
                                          Width="150"
                                          HorizontalAlignment="Left"
                                          Height="24"
                                          SelectedIndex="{Binding ProgramTypeIndex, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0">
                                    <ComboBoxItem Content="Reformer Pilates" />
                                    <ComboBoxItem Content="Pilates" />
                                    <ComboBoxItem Content="Functional" />
                                    <ComboBoxItem Content="Pilates &amp; Functional" />
                                    <ComboBoxItem Content="Ελέυθερη Χρήση" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Margin="5 0 0 0"
                                        VerticalAlignment="Top"
                                        Grid.Column="0">
                                <TextBlock Text="Συνεδρίες:"
                                           HorizontalAlignment="Left" />
                                <TextBox  Height="23"
                                          Width="40"
                                          Text="{Binding NumOfShowUps, StringFormat=c0, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>
                        <Button Content="Αγορά"
                                Margin="5"
                                Width="55"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Command="{Binding BookCommand}"
                                CommandParameter="1"
                                VerticalAlignment="Bottom" />
                        <Button Content="Πίστωση"
                                VerticalAlignment="Top"
                                CommandParameter="0"
                                Grid.Row="1"
                                Width="55"
                                Margin="5"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Command="{Binding BookCommand}" />
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    Grid.Column="0">
                            <StackPanel>
                                <TextBlock Text="Έναρξη:" />
                                <DatePicker VerticalAlignment="Center"
                                            SelectedDate="{Binding StartDate, StringFormat=c0, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="5 0 0 0"
                                        VerticalAlignment="Bottom">
                                <TextBlock Text="Τιμή Συν.:"
                                           HorizontalAlignment="Left" />
                                <TextBox Text="{Binding ShowUpPrice, StringFormat=c0, UpdateSourceTrigger=PropertyChanged}"
                                         Height="20"
                                         Width="40" />
                            </StackPanel>
                            <StackPanel Margin="5 0 0 0"
                                        VerticalAlignment="Bottom">
                                <TextBlock Text="Σύνολο:"
                                           HorizontalAlignment="Left" />
                                <TextBox Text="{Binding ProgramPrice, StringFormat=c0, UpdateSourceTrigger=PropertyChanged}"
                                         Height="20"
                                         Width="40" />
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Row="3"
                                   Grid.ColumnSpan="3"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Width="300"
                                   Foreground="red"
                                   Text="{Binding ProgramResult}" />
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="10"
                          Grid.ColumnSpan="2"
                          Header="Εξόφληση">
                    <Grid Margin="0 -3 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    HorizontalAlignment="Right"
                                    Grid.ColumnSpan="2"
                                    Grid.Column="0">
                            <TextBlock Text="Ποσό:" />
                            <TextBox Text="{Binding PaymentAmount, StringFormat=c0, UpdateSourceTrigger=PropertyChanged}"
                                     Width="30"
                                     Margin="5 0" />
                            <Button Content="Πληρωμή"
                                    VerticalAlignment="Center"
                                    Command="{Binding PaymentCommand}" />
                        </StackPanel>
                        <!--<TextBlock Grid.Row="3"
                                       Grid.ColumnSpan="3"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Width="300"
                                       Foreground="red"
                                       Text="{Binding ProgramResult}" />-->
                    </Grid>
                </GroupBox>
                <StackPanel Grid.Row="11"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                    <GroupBox Header="Παρουσίες"
                              HorizontalAlignment="Left"
                              Margin="0 0 5 0">
                        <DataGrid ItemsSource="{Binding ShowUps}"
                                  SelectedItem="{Binding SelectedShowUp}"
                                  CanUserAddRows="False"
                                  Height="105"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  IsReadOnly="True"
                                  CanUserDeleteRows="False"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ημερομηνία"
                                                    Binding="{Binding Arrived,StringFormat='{}{0:dd/MM/yyyy hh:mm}'}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox Header="Πληρωμές"
                              HorizontalAlignment="Left"
                              Margin="0 0 5 0">
                        <DataGrid ItemsSource="{Binding Payments}"
                                  SelectedItem="{Binding SelectedPayment}"
                                  CanUserAddRows="False"
                                  Height="105"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  IsReadOnly="True"
                                  CanUserDeleteRows="False"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ημερομηνία"
                                                    Binding="{Binding Date,StringFormat='{}{0:dd/MM/yyyy}'}" />
                                <DataGridTextColumn Header="Ποσό"
                                                    Binding="{Binding Amount,StringFormat=c0}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </StackPanel>
                <GroupBox Header="Προγράμματα"
                          Grid.Row="12"
                          HorizontalAlignment="Left"
                          Grid.ColumnSpan="2">
                    <DataGrid ItemsSource="{Binding Programs}"
                              SelectedItem="{Binding SelectedProgram}"
                              CanUserAddRows="False"
                              VirtualizingPanel.VirtualizationMode="Standard"
                              IsReadOnly="True"
                              Height="105"
                              CanUserDeleteRows="False"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Αγορά"
                                                Binding="{Binding DayOfIssue,StringFormat='{}{0:dd/MM/yyyy}'}" />
                            <DataGridTextColumn Header="Έναρξη"
                                                Binding="{Binding StartDay,StringFormat='{}{0:dd/MM/yyyy}'}" />
                            <DataGridTextColumn Header="Τύπος"
                                                Binding="{Binding ProgramType, Converter={StaticResource ProgramTypeToStringConverter}}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
        </StackPanel>
    </GroupBox>
</Window>