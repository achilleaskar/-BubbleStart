<Window x:Class="BubbleStart.Views.CustomerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Converters="clr-namespace:BubbleStart.Converters"
        xmlns:models="clr-namespace:BubbleStart.Model"
        xmlns:helpers="clr-namespace:BubbleStart.Helpers"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        d:DataContext="{d:DesignInstance models:Customer}"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Width="1300"
        WindowState="Maximized"
        Background="White"
        d:DesignHeight="950"
        d:DesignWidth="1210">
    <Window.Resources>
        <Converters:DateTimeToString x:Key="DateTimeToString" />
        <Converters:FloadToStringValueConverter x:Key="FtoSConverter" />
        <Converters:RemainingAmountToColorConverter x:Key="RemainingAmountToColorConverter" />
        <Converters:BoolToPaidConverter x:Key="BoolToShowedUp_Converter" />
        <Converters:MeetingsToColorConverter x:Key="MeetingsToColorConverter" />
        <Converters:RowToIndexConverter x:Key="RowToIndexConverter" />
        <Style TargetType="DataGridCell">
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                 Color="#FF0078D7" />
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                 Color="White" />
            </Style.Resources>
        </Style>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <Grid VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Margin="5 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="Ονοματεπώνυμο:"
                       Grid.Row="0"
                       Grid.Column="0" />
                <TextBlock Text="{Binding FullName}"
                           Grid.Row="0"
                           Grid.Column="1"
                           Margin="0,5,0,4" />
                <Label Content="Τηλέφωνο:"
                       Grid.Row="1"
                       Grid.Column="0" />
                <TextBlock Text="{Binding Tel}"
                           Grid.Row="1"
                           Grid.Column="1"
                           Margin="0,4" />
                <Separator Grid.Row="2"
                           Margin="-4 0"
                           Grid.ColumnSpan="2" />
                <Label Content="Ενεργή συνδρομή:"
                       Grid.Row="3"
                       Grid.Column="0" />
                <TextBlock Text="{Binding Active}"
                           Grid.Row="3"
                           Grid.Column="1"
                           Margin="0,4" />
                <Label Content="Απομένουν(φορές):"
                       Grid.Row="4"
                       Grid.Column="0" />
                <StackPanel Orientation="Horizontal"
                            Grid.Row="4"
                            Grid.Column="1">
                    <TextBlock Text="{Binding RemainingTrainingDays}"
                               HorizontalAlignment="Left"
                               Padding="5 0"
                               Background="{Binding SelectedProgram,Converter={StaticResource RemainingAmountToColorConverter}}"
                               Margin="0,4" />
                    <TextBlock Text="-"
                               Margin="5" />
                    <TextBlock Text="{Binding RemainingMassageDays}"
                               HorizontalAlignment="Left"
                               Padding="5 0"
                               Background="{Binding SelectedMasage,Converter={StaticResource RemainingAmountToColorConverter}}"
                               Margin="0,4" />
                </StackPanel>
                <!--Background="{Binding ,ConverterParameter={Binding RemainingAmount}, Converter={StaticResource MeetingsToColorConverter}}"-->
                <Label Content="Τύπος Ενεργού Πακέτου:"
                       Grid.Row="5"
                       Grid.Column="0" />
                <TextBlock Text="{Binding TypeOfProgram }"
                           Grid.Row="5"
                           Grid.Column="1"
                           Margin="0,4" />
                <Label Content="Υπόλοιπο:"
                       Grid.Row="6"
                       Margin="0"
                       Padding="5 5 5 0"
                       Grid.Column="0" />
                <TextBlock Text="{Binding RemainingAmount, StringFormat=c1}"
                           Grid.Row="6"
                           Grid.Column="1"
                           Margin="0,4,0,0" />
                <GroupBox Grid.Row="7"
                          HorizontalAlignment="Left"
                          Grid.ColumnSpan="2"
                          Header="Αγορά πακέτου">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Row="0"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Grid.Column="0">
                            <StackPanel>
                                <TextBlock Text="Τύπος:"
                                           HorizontalAlignment="Left" />
                                <ComboBox VerticalAlignment="Top"
                                          Width="130"
                                          HorizontalAlignment="Left"
                                          Height="24"
                                          SelectedIndex="{Binding ProgramTypeIndex, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0">
                                    <ComboBoxItem Content="Reformer Pilates" />
                                    <ComboBoxItem Content="Pilates" />
                                    <ComboBoxItem Content="Functional" />
                                    <ComboBoxItem Content="Pilates &amp; Functional" />
                                    <ComboBoxItem Content="Ελέυθερη Χρήση" />
                                    <ComboBoxItem Content="Medical Exercise" />
                                    <ComboBoxItem Content="Δοκιμαστικό" />
                                    <ComboBoxItem Content="Yoga" />
                                    <ComboBoxItem Content="Aerial Yoga" />
                                    <ComboBoxItem Content="Μασάζ χαλαρωτικό 30'" />
                                    <ComboBoxItem Content="Μασάζ χαλαρωτικό 50'" />
                                    <ComboBoxItem Content="Μασάζ Θεραπευτικό 30'" />
                                    <ComboBoxItem Content="Μασάζ Θεραπευτικό 50'" />
                                    <ComboBoxItem Content="Black Friday Deal" />
                                    <ComboBoxItem Content="4+1 massage" />
                                    <ComboBoxItem Content="Online" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Margin="5 0 0 0"
                                        VerticalAlignment="Top"
                                        Grid.Column="0">
                                <TextBlock Text="Συνεδρίες:"
                                           HorizontalAlignment="Left" />
                                <TextBox  Height="23"
                                          Width="30"
                                          Text="{Binding NumOfShowUps,  UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                        Margin="8 0 0 0"
                                        VerticalAlignment="Top"
                                        Grid.Column="0">
                                <TextBlock Text="Μήνες:"
                                           HorizontalAlignment="Left" />
                                <ComboBox  Height="23"
                                           Width="36"
                                           ItemsSource="{x:Static helpers:StaticResources.Months}"
                                           SelectedItem="{Binding ProgramDuration,  UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    Grid.Column="0">
                            <StackPanel>
                                <TextBlock Text="Αγορά Πακέτου:" />
                                <DatePicker SelectedDate="{Binding DateOfIssue,  UpdateSourceTrigger=PropertyChanged}"
                                            Width="120" />
                            </StackPanel>
                            <StackPanel Margin="5 0">
                                <TextBlock Text="1η συνεδρία" />
                                <DatePicker SelectedDate="{Binding StartDate,  UpdateSourceTrigger=PropertyChanged}"
                                            Width="120" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal">
                            <StackPanel Margin="0 0 0 5"
                                        VerticalAlignment="Bottom">
                                <TextBlock Text="Τιμή Συν.:"
                                           HorizontalAlignment="Left" />
                                <TextBox Text="{Binding ShowUpPrice,Converter={StaticResource FtoSConverter}, UpdateSourceTrigger=PropertyChanged}"
                                         Height="20"
                                         Width="40" />
                            </StackPanel>
                            <StackPanel Margin="7 0 0 5"
                                        VerticalAlignment="Bottom">
                                <TextBlock Text="Σύνολο:"
                                           HorizontalAlignment="Left" />
                                <TextBox Text="{Binding ProgramPrice,Converter={StaticResource FtoSConverter}, UpdateSourceTrigger=PropertyChanged}"
                                         Height="20"
                                         Width="36" />
                            </StackPanel>
                            <Button Content="Αγορά"
                                    Margin="5 5 0 5"
                                    Width="55"
                                    HorizontalAlignment="Center"
                                    Command="{Binding BookCommand}"
                                    CommandParameter="1"
                                    VerticalAlignment="Bottom" />
                            <Button Content="Πίστωση"
                                    VerticalAlignment="Bottom"
                                    CommandParameter="0"
                                    Width="55"
                                    Margin="5"
                                    HorizontalAlignment="Center"
                                    Command="{Binding BookCommand}" />
                        </StackPanel>
                        <GroupBox Grid.Row="3"
                                  Visibility="{Binding PaymentVisibility}"
                                  Header="Πληρωμη Δόσης / Εξόφληση">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel>
                                        <TextBlock Text="Ημερομηνία Πληρωμής:" />
                                        <DatePicker SelectedDate="{Binding DateOfPayment,  UpdateSourceTrigger=PropertyChanged}"
                                                    Width="120" />
                                    </StackPanel>
                                    <StackPanel Margin="7 0 0 5"
                                                VerticalAlignment="Bottom">
                                        <TextBlock Text="Ποσό:"
                                                   HorizontalAlignment="Left" />
                                        <TextBox Text="{Binding PaymentAmount,Converter={StaticResource FtoSConverter}, StringFormat=c1, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="20"
                                                 Width="36" />
                                    </StackPanel>
                                    <Button Content="Πληρωμή"
                                            Margin="5"
                                            VerticalAlignment="Bottom"
                                            Command="{Binding PaymentCommand}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Επόμενη Δόση:" />
                                    <TextBlock Text="{Binding NextPayment,StringFormat=c1}" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <TextBlock Grid.Row="4"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Width="300"
                                   Foreground="red"
                                   Text="{Binding ProgramResult}" />
                    </Grid>
                </GroupBox>
                <!--<GroupBox Grid.Row="10"
                              Width=" 330"
                              HorizontalAlignment="Left"
                              Grid.ColumnSpan="2"
                              Header="Εισαγωγή Πληρωμής">
                        <Grid Margin="0 -3 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1"
                                        HorizontalAlignment="Right"
                                        Grid.ColumnSpan="2"
                                        Grid.Column="0">
                                <TextBlock Text="Ποσό:" />
                                <TextBox Text="{Binding PaymentAmount, StringFormat=c0, UpdateSourceTrigger=PropertyChanged}"
                                         Width="30"
                                         Margin="5 0" />
                                <Button Content="Πληρωμή"
                                        VerticalAlignment="Center"
                                        Command="{Binding PaymentCommand}" />
                            </StackPanel>
                            -->
                <!--<TextBlock Grid.Row="3"
                                       Grid.ColumnSpan="3"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Width="300"
                                       Foreground="red"
                                       Text="{Binding ProgramResult}" />-->
                <!--
                        </Grid>
                    </GroupBox>-->
                <GroupBox Grid.Row="8"
                          Grid.ColumnSpan="2"
                          HorizontalAlignment="Left"
                          Header="Προσθήκη Παρουσίας">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Ημερομ. :" />
                        <DatePicker SelectedDate="{Binding OldShowUpDate,UpdateSourceTrigger=PropertyChanged}"
                                    Width="98" />
                        <CheckBox Content="Massage"
                                  IsChecked="{Binding IsMassage}"
                                  VerticalAlignment="Center"
                                  Margin="5" />
                        <Button Command="{Binding AddOldShowUpCommand}"
                                Content="Προσθήκη"
                                Margin="0 0 5 0"
                                VerticalAlignment="Center" />
                    </StackPanel>
                </GroupBox>
            </Grid>
            <Grid Grid.Column="1"
                  Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <GroupBox Header="Παρουσίες Γυμναστικής"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Left">
                        <DataGrid ItemsSource="{Binding ShowUpsCollectionView}"
                                  SelectedItem="{Binding SelectedShowUp}"
                                  CanUserAddRows="False"
                                  Height="330"
                                  VerticalAlignment="Stretch"
                                  CanUserDeleteRows="False"
                                  Width="135"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  AutoGenerateColumns="False">
                            <DataGrid.Resources>
                                <ContextMenu x:Key="ShowUpsSubMenu">
                                    <MenuItem Header="Διαγραφή"
                                              Command="{Binding DataContext.DeleteShowUpCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Αλλαγή απο/σε massage"
                                              Command="{Binding DataContext.ToggleMassageCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                    <MenuItem Header="Ήρθε/Δεν ήρθε"
                                              Command="{Binding DataContext.ToggleRealCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                </ContextMenu>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}"
                                       BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="ContextMenu"
                                            Value="{StaticResource ShowUpsSubMenu}" />
                                    <Setter Property="Background"
                                            Value="{Binding Color}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="#">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding RealColor}">
                                                <TextBlock Text="{Binding Count}" />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Ημερομηνία"
                                                    Binding="{Binding Arrived,ConverterParameter='dd/MM/yy HH:mm', Converter={StaticResource DateTimeToString}}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox Header="Πακέτα Γυμναστικής" VerticalAlignment="Top">
                        <DataGrid ItemsSource="{Binding ProgramsColelctionView}"
                                  VerticalAlignment="Top"
                                  CanUserAddRows="False"
                                  SelectedItem="{Binding SelectedProgramToDelete}"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  Width="475"
                                  Height="330"
                                  CanUserDeleteRows="False"
                                  AutoGenerateColumns="False">
                            <DataGrid.Resources>
                                <ContextMenu x:Key="ProgramsSubMenu">
                                    <MenuItem Header="Διαγραφή"
                                              Command="{Binding DataContext.DeleteProgramCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}"
                                       BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="ContextMenu"
                                            Value="{StaticResource ProgramsSubMenu}" />
                                    <Setter Property="Background"
                                            Value="{Binding Color}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Έναρξη"
                                                    Width="55"
                                                    Binding="{Binding StartDay,ConverterParameter='dd/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                <DataGridTextColumn Header="Τύπος"
                                                    Width="120"
                                                    IsReadOnly="True"
                                                    Binding="{Binding }" />
                                <DataGridTextColumn Header="Συν."
                                                    Width="30"
                                                    Binding="{Binding Showups}" />
                                <DataGridTextColumn Header="Μήνες"
                                                    Width="35"
                                                    Binding="{Binding Months}" />
                                <DataGridTextColumn Header="Τιμή Συν."
                                                    Width="55"
                                                    Binding="{Binding ShowUpPrice,StringFormat=c}" />
                                <DataGridTextColumn Header="Σύνολο"
                                                    Width="55"
                                                    Binding="{Binding Amount,StringFormat=c}" />
                                <DataGridTextColumn Header="Αγορά"
                                                    Width="55"
                                                    Binding="{Binding DayOfIssue,ConverterParameter='dd/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                <DataGridTemplateColumn Header="Πλήρωμή"
                                                        Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border>
                                                <TextBlock Text="{Binding Paid, Converter={StaticResource BoolToShowedUp_Converter}}">
                                                    <TextBlock.Style>
                                                        <Style>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding PaidCol}"
                                                                             Value="true">
                                                                    <Setter Property="TextBlock.Background"
                                                                            Value="LightGreen" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding PaidCol}"
                                                                             Value="false">
                                                                    <Setter Property="TextBlock.Background"
                                                                            Value="#FFE67979" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style></TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox Header="Πληρωμές Γυμν."
                              Grid.Column="3"
                              Grid.RowSpan="30"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Left">
                        <DataGrid ItemsSource="{Binding PaymentsCollectionView}"
                                  VerticalAlignment="Top"
                                  SelectedItem="{Binding SelectedPayment}"
                                  CanUserAddRows="False"
                                  Width="110"
                                  Height="330"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  CanUserDeleteRows="False"
                                  AutoGenerateColumns="False">
                            <DataGrid.Resources>
                                <ContextMenu x:Key="PaymentsSubMenu">
                                    <MenuItem Header="Διαγραφή"
                                              Command="{Binding DataContext.DeletePaymentCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Σύνδεση με πακέτο"
                                              Command="{Binding DataContext.SetToProgramCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                </ContextMenu>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}"
                                       BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="ContextMenu"
                                            Value="{StaticResource PaymentsSubMenu}" />
                                    <Setter Property="Background"
                                            Value="{Binding PaymentColor}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ημερομ."
                                                    Width="55"
                                                    Binding="{Binding Date,ConverterParameter='dd/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                <DataGridTextColumn Header="Ποσό"
                                                    Width="45"
                                                    Binding="{Binding Amount,StringFormat=c1}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <Button Content="Παλιά"
                            Command="{Binding ShowPreviusDataCommand}"
                            Grid.Column="4"
                            Margin=" 0 10 0 0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel  Grid.Row="1"
                             Orientation="Horizontal"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Left">
                    <GroupBox Header="Παρουσίες Masssage"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Left"
                              Grid.Column="1">
                        <DataGrid ItemsSource="{Binding ShowUpsMassCollectionView}"
                                  SelectedItem="{Binding SelectedMassShowUp}"
                                  CanUserAddRows="False"
                                  Height="330"
                                  VerticalAlignment="Stretch"
                                  CanUserDeleteRows="False"
                                  Width="135"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  AutoGenerateColumns="False">
                            <DataGrid.Resources>
                                <ContextMenu x:Key="ShowUpsSubMenu">
                                    <MenuItem Header="Διαγραφή"
                                              Command="{Binding DataContext.DeletemassShowUpCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Αλλαγή απο/σε massage"
                                              Command="{Binding DataContext.ToggleMassagebCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                    <MenuItem Header="Ήρθε/Δεν ήρθε"
                                              Command="{Binding DataContext.ToggleRealbCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                </ContextMenu>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}"
                                       BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="ContextMenu"
                                            Value="{StaticResource ShowUpsSubMenu}" />
                                    <Setter Property="Background"
                                            Value="{Binding Color}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="#">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding RealColor}">
                                                <TextBlock Text="{Binding Count}" />
                                                <!--<TextBlock.Style>
                                                        <Style>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Massage}"
                                                                             Value="false">
                                                                    <Setter Property="TextBlock.Background"
                                                                            Value="Transparent" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Massage}"
                                                                             Value="true">
                                                                    <Setter Property="TextBlock.Background"
                                                                            Value="LightBlue" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>-->
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Ημερομηνία"
                                                    Binding="{Binding Arrived,ConverterParameter='dd/MM/yy HH:mm', Converter={StaticResource DateTimeToString}}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox Header="Πακέτα Μασάζ">
                        <DataGrid ItemsSource="{Binding ProgramsMassageColelctionView}"
                                  VerticalAlignment="Top"
                                  CanUserAddRows="False"
                                  SelectedItem="{Binding SelectedProgramMassageToDelete}"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  Margin="0 0 0 0"
                                  Height="330"
                                  Width="475"
                                  CanUserDeleteRows="False"
                                  AutoGenerateColumns="False">
                            <DataGrid.Resources>
                                <ContextMenu x:Key="ProgramsSubMenu">
                                    <MenuItem Header="Διαγραφή"
                                              Command="{Binding DataContext.DeleteProgramMassCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}"
                                       BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="ContextMenu"
                                            Value="{StaticResource ProgramsSubMenu}" />
                                    <Setter Property="Background"
                                            Value="{Binding Color}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Έναρξη"
                                                    Width="55"
                                                    Binding="{Binding StartDay,ConverterParameter='dd/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                <DataGridTextColumn Header="Τύπος"
                                                    Width="120"
                                                    IsReadOnly="True"
                                                    Binding="{Binding }" />
                                <DataGridTextColumn Header="Συν."
                                                    Width="30"
                                                    Binding="{Binding Showups}" />
                                <DataGridTextColumn Header="Μήνες"
                                                    Width="35"
                                                    Binding="{Binding Months}" />
                                <DataGridTextColumn Header="Τιμή Συν."
                                                    Width="55"
                                                    Binding="{Binding ShowUpPrice,StringFormat=c}" />
                                <DataGridTextColumn Header="Σύνολο"
                                                    Width="55"
                                                    Binding="{Binding Amount,StringFormat=c}" />
                                <DataGridTextColumn Header="Αγορά"
                                                    Width="55"
                                                    Binding="{Binding DayOfIssue,ConverterParameter='dd/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                <DataGridTemplateColumn Header="Πλήρωμή"
                                                        Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border>
                                                <TextBlock Text="{Binding Paid, Converter={StaticResource BoolToShowedUp_Converter}}">
                                                    <TextBlock.Style>
                                                        <Style>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding PaidCol}"
                                                                             Value="true">
                                                                    <Setter Property="TextBlock.Background"
                                                                            Value="LightGreen" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding PaidCol}"
                                                                             Value="false">
                                                                    <Setter Property="TextBlock.Background"
                                                                            Value="#FFE67979" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style></TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox Header="Πληρωμές Mass."
                              Grid.Column="3"
                              Grid.RowSpan="30"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Left">
                        <DataGrid ItemsSource="{Binding PaymentsMassCollectionView}"
                                  VerticalAlignment="Top"
                                  SelectedItem="{Binding SelectedPaymentMass}"
                                  CanUserAddRows="False"
                                  Width="110"
                                  Height="330"
                                  VirtualizingPanel.VirtualizationMode="Standard"
                                  CanUserDeleteRows="False"
                                  AutoGenerateColumns="False">
                            <DataGrid.Resources>
                                <ContextMenu x:Key="PaymentsSubMenuMass">
                                    <MenuItem Header="Διαγραφή"
                                              Command="{Binding DataContext.DeletePaymentMassCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Σύνδεση με πακέτο"
                                              Command="{Binding DataContext.SetToProgramCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                </ContextMenu>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}"
                                       BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="ContextMenu"
                                            Value="{StaticResource PaymentsSubMenuMass}" />
                                    <Setter Property="Background"
                                            Value="{Binding PaymentColor}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ημερομ."
                                                    Width="55"
                                                    Binding="{Binding Date,ConverterParameter='dd/MM/yy', Converter={StaticResource DateTimeToString}}" />
                                <DataGridTextColumn Header="Ποσό"
                                                    Width="45"
                                                    Binding="{Binding Amount,StringFormat=c1}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </StackPanel>
                
            </Grid>
            <GroupBox Grid.Row="1"
                      Margin="5 0 0 0"
                      Width="370"
                      Foreground="Red"
                      HorizontalAlignment="Left"
                      Header="Αλλαγές">
                <DataGrid ItemsSource="{Binding Changes}"
                          VerticalAlignment="Top"
                          CanUserAddRows="False"
                          Height="185"
                          VirtualizingPanel.VirtualizationMode="Standard"
                          CanUserDeleteRows="False"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ημερομηνία"
                                            Binding="{Binding Date,ConverterParameter='dd/MM/yyyy', Converter={StaticResource DateTimeToString}}" />
                        <DataGridTextColumn Header="Χρήστης"
                                            Binding="{Binding User.Name}" />
                        <DataGridTemplateColumn Header="Πρόβλημα"
                                                Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Width="Auto"
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap"
                                               MaxHeight="60"
                                               Text="{Binding Description}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <StackPanel Grid.Row="3">
                <Button Content="Αποθήκευση αλλαγών"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="5"
                        Command="{Binding SaveChangesAsyncCommand}" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>