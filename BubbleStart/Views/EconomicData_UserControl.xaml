<UserControl x:Class="BubbleStart.Views.EconomicData_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:BubbleStart.ViewModels"
             xmlns:models="clr-namespace:BubbleStart.Model"
             xmlns:views="clr-namespace:BubbleStart.Views"
             xmlns:Converters="clr-namespace:BubbleStart.Converters"
             d:DataContext="{d:DesignInstance {x:Type viewmodels:EconomicData_ViewModel}}"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="650"
             d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Header="Ταμείο">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Aπό:" />
                        <DatePicker VerticalAlignment="Center"
                                    SelectedDate="{Binding StartDateCash,  UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Margin=" 5 0 0 5">
                        <TextBlock Text="Έως:" />
                        <DatePicker VerticalAlignment="Center"
                                    SelectedDate="{Binding EndDateCash, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <Button Content="Προβολή"
                            Margin="5"
                            VerticalAlignment="Bottom"
                            Command="{Binding ShowCashDataCommand}" />
                </StackPanel>
                <DataGrid ItemsSource="{Binding DailyPayments}"
                          Grid.Row="1"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          CanUserDeleteRows="False"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Όνομα"
                                            Width="120"
                                            Binding="{Binding Customer.Name}" />
                        <DataGridTextColumn Header="Επίθετο"
                                            Width="120"
                                            Binding="{Binding Customer.SureName}" />
                        <DataGridTextColumn Header="Ποσό"
                                            Width="60"
                                            Binding="{Binding Amount}" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="2">
                    <Label Content="Σύνολο:" />
                    <Label Content="{Binding Sum}" />
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
