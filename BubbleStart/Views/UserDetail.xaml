<UserControl x:Class="BubbleStart.Views.UserDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:BubbleStart.Model"
             xmlns:converters="clr-namespace:BubbleStart.Converters"
             xmlns:local="clr-namespace:BubbleStart.Views"
             xmlns:helpers="clr-namespace:BubbleStart.Helpers"
             d:DataContext="{d:DesignInstance models:Customer}"
             mc:Ignorable="d"
             d:DesignHeight="1850"
             Background="White"
             d:DesignWidth="1000">
    <UserControl.Resources>
        <converters:IsCustomerNullToBoolConverter x:Key="IsCustomerNullToBoolConverter" />
        <converters:ContentToColorConverter x:Key="ContentToColorConverter" />
        <converters:BMItoColorConverter x:Key="BMItoColorConverter" />
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Visible"
                      IsEnabled="{Binding Converter={StaticResource IsCustomerNullToBoolConverter}, Mode=OneWay}"
                      HorizontalScrollBarVisibility="Visible">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Βασικά Στοιχεία"
                              Margin="5"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Left">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="215" />
                            </Grid.ColumnDefinitions>
                            <Label Content="Όνομα:"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2" />
                            <TextBox Text="{Binding Name,ValidatesOnDataErrors=True,ValidatesOnExceptions=True,ValidatesOnNotifyDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                     Grid.Row="0"
                                     Grid.Column="2"
                                     Margin="0,5,0,4" />
                            <Label Content="Επίθετο:"
                                   Grid.Row="0"
                                   Grid.Column="3" />
                            <TextBox Text="{Binding SureName,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnNotifyDataErrors=True}"
                                     Grid.Row="0"
                                     Grid.Column="4"
                                     Margin="0,5,0,4" />
                            <!--row 1-->
                            <Label Content="Ημερομηνία Γέννησης:"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2" />
                            <DatePicker SelectedDate="{Binding DOB,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="0,1" />
                            <Label Content="Τηλέφωνο:"
                                   Grid.Row="1"
                                   Grid.Column="3" />
                            <TextBox Text="{Binding Tel,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                     Grid.Row="1"
                                     Grid.Column="4"
                                     Margin="0,4" />
                            <!--row 2-->
                            <Label Content="Διεύθυνση:"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2" />
                            <TextBox Text="{Binding Address,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                     TextWrapping="Wrap"
                                     Grid.RowSpan="2"
                                     Height="50"
                                     Margin="0 5"
                                     Grid.Row="2"
                                     Grid.Column="2" />
                            <Label Content="Περιοχή:"
                                   Grid.Row="2"
                                   Grid.Column="3" />
                            <ComboBox Grid.Row="2"
                                      ItemsSource="{Binding BasicDataManager.Districts}"
                                      Text="{Binding DistrictText,UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="Name"
                                      Grid.Column="4"
                                      IsEditable="True"
                                      Margin="0,4" />
                            <Label Content="Επάγγελμα:"
                                   Grid.Row="3"
                                   Grid.Column="3" />
                            <TextBox Text="{Binding Job,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                     Grid.Row="3"
                                     Grid.Column="4"
                                     Margin="0,6" />
                            <!--row 4-->
                            <Label Content="Email:"
                                   Grid.Row="4"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2" />
                            <TextBox Text="{Binding Email,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                     Grid.Row="4"
                                     Grid.Column="2"
                                     Margin="0,7" />
                            <Label Content="Προτ. Χέρι:"
                                   Grid.Row="4"
                                   Grid.Column="3" />
                            <ComboBox SelectedIndex="{Binding PreferedHand,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                      Grid.Row="4"
                                      Margin="0 5"
                                      Grid.Column="4">
                                <ComboBoxItem>Δεξί</ComboBoxItem>
                                <ComboBoxItem>Αριστερό</ComboBoxItem>
                                <ComboBoxItem>Αμφιδέξιος</ComboBoxItem>
                            </ComboBox>
                            <!--row 5-->
                            <Label Content="Φύλο:"
                                   Grid.Row="5"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2" />
                            <ComboBox SelectedIndex="{Binding Gender,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                      Grid.Row="5"
                                      Margin="0 5"
                                      Grid.Column="2">
                                <ComboBoxItem>Ανδρας</ComboBoxItem>
                                <ComboBoxItem>Γυναίκα</ComboBoxItem>
                            </ComboBox>
                            <Label Content="Ιστορικό Βάρους:"
                                   Grid.Row="5"
                                   Grid.Column="3" />
                            <DataGrid ItemsSource="{Binding WeightHistory,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                      Grid.Row="5"
                                      Grid.RowSpan="5"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      Width="215"
                                      Height="140"
                                      Grid.Column="4"
                                      Margin="0,5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding WeightValue}"
                                                        Header="Βάρος" />
                                    <DataGridTemplateColumn Header="Ημερομηνία">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DatePicker Width="Auto"
                                                            VerticalAlignment="Center"
                                                            MinWidth="60"
                                                            SelectedDate="{Binding DateOfMeasure,UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="BMI"
                                                        IsReadOnly="True"
                                                        Binding="{Binding BMI}" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <!--row 6-->
                            <Label Content="Νέο Βάρος:"
                                   Grid.Row="6"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2" />
                            <TextBox Text="{Binding NewWeight,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True}"
                                     Grid.Row="6"
                                     KeyUp="TextBox_KeyUp"
                                     Grid.Column="2"
                                     Margin="0,4" />
                            <!--row 7-->
                            <Label Content="BMI:"
                                   Grid.Row="7"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2" />
                            <TextBlock Text="{Binding BMI, Mode=OneWay}"
                                       Background="{Binding BMI,Converter={StaticResource  BMItoColorConverter}}"
                                       Grid.Row="7"
                                       Width="40"
                                       Padding="3 0"
                                       HorizontalAlignment="Left"
                                       Grid.Column="2"
                                       Margin="0,5" />
                            <!--row 8-->
                            <Label Content="Ύψος(cm):"
                                   Grid.Row="8"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2" />
                            <TextBox Text="{Binding Height,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Row="8"
                                     Grid.Column="2" VerticalAlignment="Top"
                                     Margin="0,4" />
                        </Grid>
                    </GroupBox>
                </Grid>
                <Grid>
                    <GroupBox Header="Πρόσθετες Πληροφορίες - Ιστορικό"
                              Margin="5"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <GroupBox Header="Τρόπος Ζωής"
                                      Width="245">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Καταναλώνετε Αλκοόλ?"
                                           Grid.Row="0"
                                           Grid.Column="0" />
                                    <CheckBox Name="alcohol"
                                              IsChecked="{Binding Alcohol}"
                                              Grid.Row="0"
                                              VerticalAlignment="Center"
                                              Grid.Column="1" />
                                    <Label Content="Πόσες φορές τον μήνα?"
                                           Grid.Row="1"
                                           Visibility="{Binding IsChecked, ElementName=alcohol, Converter={StaticResource booleanToVisibilityConverter}}"
                                           Grid.Column="0" />
                                    <ComboBox SelectedIndex="{Binding AlcoholUsage}"
                                              Grid.Row="1"
                                              Visibility="{Binding IsChecked, ElementName=alcohol, Converter={StaticResource booleanToVisibilityConverter}}"
                                              VerticalAlignment="Center"
                                              Grid.Column="1">
                                        <ComboBoxItem>&lt;1</ComboBoxItem>
                                        <ComboBoxItem>1-5</ComboBoxItem>
                                        <ComboBoxItem>6-10</ComboBoxItem>
                                        <ComboBoxItem>11-18</ComboBoxItem>
                                        <ComboBoxItem>18-30</ComboBoxItem>
                                    </ComboBox>
                                    <Label Content="Καπνίζετε?"
                                           Grid.Row="2"
                                           Grid.Column="0" />
                                    <CheckBox Name="smoke"
                                              IsChecked="{Binding Smoker}"
                                              Grid.Row="2"
                                              VerticalAlignment="Center"
                                              Grid.Column="1" />
                                    <Label Content="Πόσες τσιγάρα την ημέρα?"
                                           Grid.Row="3"
                                           Visibility="{Binding IsChecked, ElementName=alcohol, Converter={StaticResource booleanToVisibilityConverter}}"
                                           Grid.Column="0" />
                                    <ComboBox SelectedIndex="{Binding SmokingUsage}"
                                              Grid.Row="3"
                                              Visibility="{Binding IsChecked, ElementName=smoke, Converter={StaticResource booleanToVisibilityConverter}}"
                                              VerticalAlignment="Center"
                                              Grid.Column="1">
                                        <ComboBoxItem>1-9</ComboBoxItem>
                                        <ComboBoxItem>10-19</ComboBoxItem>
                                        <ComboBoxItem>20-39</ComboBoxItem>
                                        <ComboBoxItem>40+</ComboBoxItem>
                                    </ComboBox>
                                    <Label Content="Θέλετε να το κόψετε?"
                                           Grid.Row="4"
                                           Visibility="{Binding IsChecked, ElementName=smoke, Converter={StaticResource booleanToVisibilityConverter}}"
                                           Grid.Column="0" />
                                    <CheckBox IsChecked="{Binding WantToQuit}"
                                              Grid.Row="4"
                                              Visibility="{Binding IsChecked, ElementName=smoke, Converter={StaticResource booleanToVisibilityConverter}}"
                                              VerticalAlignment="Center"
                                              Grid.Column="1" />
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Ιστορικό Εκγύμνασης"
                                      Width="410"
                                      Grid.Column="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Ποιοί είναι οι κυριοι λόγοι που ξεκινάτε?"
                                               Grid.ColumnSpan="2" />

                                    <StackPanel Margin="10 0"
                                                Grid.Row="1">
                                        <CheckBox Content="Γενική Βελτίωση"
                                                  IsChecked="{Binding ReasonVeltiwsh}" />
                                        <CheckBox Content="Μείωση Βάρους"
                                                  IsChecked="{Binding ReasonSlim}" />
                                        <CheckBox Content="Τραυματισμός"
                                                  IsChecked="{Binding ReasonInjury}" />
                                        <CheckBox Content="Μυϊκή Δύναμη"
                                                  IsChecked="{Binding ReasonPower}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                Grid.Row="1"
                                                Grid.Column="2">
                                            <Label Content="Άλλοι Λόγοι:"
                                                   Padding="0" />
                                            <TextBox Text="{Binding ExtraReasons}"
                                                     Height="44"
                                                     HorizontalAlignment="Stretch"
                                                 TextWrapping="Wrap"
                                                 AcceptsReturn="True"
                                                 Grid.Column="1" />
                                        </StackPanel>

                                    <Label Content="Έχετε κάνει ξανά δομημένη άσκηση?"
                                           Grid.Row="2"
                                           Grid.Column="0" />
                                    <CheckBox  Name="firsttime"
                                               IsChecked="{Binding HistoryNotFirstTime}"
                                               Grid.Row="2"
                                               VerticalAlignment="Center"
                                               Grid.Column="1" />
                                    <Label Content="Τί Είδους?"
                                           Grid.Row="3"
                                           Visibility="{Binding IsChecked, ElementName=firsttime, Converter={StaticResource booleanToVisibilityConverter}}"
                                           Grid.Column="0" />
                                    <ScrollViewer MaxHeight="150"
                                                  VerticalScrollBarVisibility="Auto"
                                                  Visibility="{Binding IsChecked, ElementName=firsttime, Converter={StaticResource booleanToVisibilityConverter}}"
                                                  VerticalAlignment="Center"
                                                  Grid.Column="1"
                                                  Grid.Row="3">
                                        <TextBox Text="{Binding HistoryKind}"
                                                 TextWrapping="Wrap"
                                                 AcceptsReturn="True" />
                                    </ScrollViewer>
                                    <Label Content="Πόσες φορές την εβδομάδα?"
                                           Grid.Row="4"
                                           Visibility="{Binding IsChecked, ElementName=firsttime, Converter={StaticResource booleanToVisibilityConverter}}"
                                           Grid.Column="0" />
                                    <ComboBox SelectedIndex="{Binding HistoryTimesPerWeek}"
                                              Grid.Row="4"
                                              Visibility="{Binding IsChecked, ElementName=firsttime, Converter={StaticResource booleanToVisibilityConverter}}"
                                              VerticalAlignment="Center"
                                              Grid.Column="1">
                                        <ComboBoxItem>1</ComboBoxItem>
                                        <ComboBoxItem>2-3</ComboBoxItem>
                                        <ComboBoxItem>4-5</ComboBoxItem>
                                        <ComboBoxItem>5-7</ComboBoxItem>
                                    </ComboBox>
                                    <Label Content="Για πόσο διάστημα το ακολουθήσατε?"
                                           Grid.Row="5"
                                           Visibility="{Binding IsChecked, ElementName=firsttime, Converter={StaticResource booleanToVisibilityConverter}}"
                                           Grid.Column="0" />
                                    <TextBox Text="{Binding HistoryDuration}"
                                             Grid.Row="5"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Center"
                                             Grid.Column="1" />
                                    <!--Visibility="{Binding IsChecked, ElementName=firsttime, Converter={StaticResource booleanToVisibilityConverter}}"-->
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="1"
                                      Grid.ColumnSpan="2"
                                      Header="Ιστορικό Υγείας">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Vertical"
                                                Grid.Column="1">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Έχετε κάποιο τραυματισμό?"
                                                               Grid.Row="8"
                                                               Margin="0 0 5 5"
                                                               Grid.Column="0" />
                                                    <CheckBox IsChecked="{Binding Illness.travmatismos}"
                                                              Grid.Row="8"
                                                              Grid.Column="1" />
                                                </StackPanel>
                                                <Canvas Height="285"
                                                        Margin="5 5 0 5"
                                                        HorizontalAlignment="Left"
                                                        Width="310">
                                                    <Image VerticalAlignment="Top"
                                                           Margin="5"
                                                           HorizontalAlignment="Left"
                                                           Width="300"
                                                           Source="/BubbleStart;component/Sources/neutral.jpg" />
                                                    <local:OvalBorderedButton Canvas.Left="32"
                                                                              GroupName="buttons"
                                                                              Height="24"
                                                                              CommandParameter="omosA"
                                                                              Canvas.Top="53"
                                                                              DataContext="{Binding Illness.omosA}"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Width="36"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                        <local:OvalBorderedButton.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform />
                                                                <SkewTransform />
                                                                <RotateTransform Angle="-44" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </local:OvalBorderedButton.RenderTransform>
                                                    </local:OvalBorderedButton>
                                                    <local:OvalBorderedButton Canvas.Left="82"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="24"
                                                                              CommandParameter="omosd"
                                                                              Canvas.Top="53"
                                                                              DataContext="{Binding Illness.omosd}"
                                                                              Width="36"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                        <local:OvalBorderedButton.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform />
                                                                <SkewTransform />
                                                                <RotateTransform Angle="-136" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </local:OvalBorderedButton.RenderTransform>
                                                    </local:OvalBorderedButton>
                                                    <local:OvalBorderedButton Canvas.Left="37"
                                                                              CommandParameter="isxioA"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="27"
                                                                              Canvas.Top="122"
                                                                              DataContext="{Binding Illness.isxioA}"
                                                                              Width="42"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                        <local:OvalBorderedButton.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform />
                                                                <SkewTransform />
                                                                <RotateTransform Angle="-80" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </local:OvalBorderedButton.RenderTransform>
                                                    </local:OvalBorderedButton>
                                                    <local:OvalBorderedButton Canvas.Left="70"
                                                                              CommandParameter="IsxioD"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="27"
                                                                              Canvas.Top="122"
                                                                              DataContext="{Binding Illness.IsxioD}"
                                                                              Width="42"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                        <local:OvalBorderedButton.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform />
                                                                <SkewTransform />
                                                                <RotateTransform Angle="-100" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </local:OvalBorderedButton.RenderTransform>
                                                    </local:OvalBorderedButton>
                                                    <local:OvalBorderedButton Canvas.Left="26"
                                                                              CommandParameter="agonasA"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="22"
                                                                              Canvas.Top="87"
                                                                              DataContext="{Binding Illness.agonasA}"
                                                                              Width="22" />
                                                    <local:OvalBorderedButton Canvas.Left="101"
                                                                              CommandParameter="agonasD"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="22"
                                                                              Canvas.Top="87"
                                                                              DataContext="{Binding Illness.agonasD}"
                                                                              Width="22" />
                                                    <local:OvalBorderedButton Canvas.Left="49"
                                                                              CommandParameter="GonatoA"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="20"
                                                                              Canvas.Top="193"
                                                                              DataContext="{Binding Illness.GonatoA}"
                                                                              Width="29"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                        <local:OvalBorderedButton.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform />
                                                                <SkewTransform />
                                                                <RotateTransform Angle="-90" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </local:OvalBorderedButton.RenderTransform>
                                                    </local:OvalBorderedButton>
                                                    <local:OvalBorderedButton Canvas.Left="71"
                                                                              CommandParameter="gonatoD"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="20"
                                                                              Canvas.Top="193"
                                                                              DataContext="{Binding Illness.gonatoD}"
                                                                              Width="29"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                        <local:OvalBorderedButton.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform />
                                                                <SkewTransform />
                                                                <RotateTransform Angle="-90" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </local:OvalBorderedButton.RenderTransform>
                                                    </local:OvalBorderedButton>
                                                    <local:OvalBorderedButton Canvas.Left="114"
                                                                              CommandParameter="karposD"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="16"
                                                                              Canvas.Top="125"
                                                                              DataContext="{Binding Illness.karposD}"
                                                                              Width="20"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                        <local:OvalBorderedButton.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform />
                                                                <SkewTransform />
                                                                <RotateTransform Angle="-110" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </local:OvalBorderedButton.RenderTransform>
                                                    </local:OvalBorderedButton>
                                                    <local:OvalBorderedButton Canvas.Left="15"
                                                                              CommandParameter="karsposA"
                                                                              GroupName="buttons"
                                                                              Command="{Binding DataContext.BodyPartSelected, RelativeSource={RelativeSource AncestorType={x:Type UserControl},AncestorLevel=2, Mode=FindAncestor}}"
                                                                              Height="16"
                                                                              Canvas.Top="125"
                                                                              DataContext="{Binding Illness.karsposA}"
                                                                              Width="20"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                        <local:OvalBorderedButton.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform />
                                                                <SkewTransform />
                                                                <RotateTransform Angle="-70" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </local:OvalBorderedButton.RenderTransform>
                                                    </local:OvalBorderedButton>
                                                    <local:OvalBorderedButton Canvas.Left="58"
                                                                              CommandParameter="PodoknhmhA"
